{
  "name": "ggbview",
  "displayName": "ggbview",
  "description": "GeoGebra文件查看器插件",
  "publisher": "neon-light",
  "icon": "media/ggb-icon.png",
  "version": "0.0.6",
  "engines": {
    "vscode": "^1.75.1"
  },
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shasky2014/vscode-ggbview.git"
  },
  "license": "MIT",
  "activationEvents": [
    "onCustomEditor:ggbview.ggbView",
    "onCommand:ggbview.open",
    "onCommand:ggbview.pickFile",
    "onCommand:ggbview.openFile"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "ggbview",
      "properties": {
        "ggbview.default.showToolBar": {
          "markdownDescription": "set your ggb editor show Tool Bar or not.",
          "type": "boolean",
          "default": true,
          "enum": [
            false,
            true
          ]},
        "ggbview.default.showMenuBar": {
          "markdownDescription": "set your ggb editor show Tool Bar or not.",
          "type": "boolean",
          "default": true,
          "enum": [
            false,
            true
          ]},
          "ggbview.default.showAlgebraInput": {
            "markdownDescription": "set your ggb editor show Algebra Input or not.",
            "type": "boolean",
            "default": false,
            "enum": [
              false,
              true
            ]},
            "ggbview.default.allowStyleBar": {
              "markdownDescription": "set your ggb editor allow Style Bar or not.",
              "type": "boolean",
              "default": false,
              "enum": [
                false,
                true
              ]},
              "ggbview.default.showToolBarHelp": {
                "markdownDescription": "set your ggb editor showToolBarHelp or not.",
                "type": "boolean",
                "default": false,
                "enum": [
                  false,
                  true
                ]}
              
      }
    },
    "menus": {
      "explorer/context": [
        {
          "title": "GGB: Pick File",
          "command": "ggbview.pickFile",
          "when": "resourceExtname == .ggb",
          "group": "2"
        },
        {
          "title": "GGB: Pick File",
          "command": "ggbview.pickFile",
          "when": "resourceExtname == .ggt",
          "group": "2"
        },
        {
          "title": "GGB: Open File",
          "command": "ggbview.open",
          "when": "resourceExtname == .ggb",
          "group": "2"
        },
        {
          "title": "GGB: Open File",
          "command": "ggbview.open",
          "when": "resourceExtname == .ggt",
          "group": "2"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "ggbfilelist",
          "name": "GeoGebra文件内容"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "ggbview.ggbView",
        "displayName": "GeoGebra View",
        "selector": [
          {
            "filenamePattern": "*.ggb"
          },
          {
            "filenamePattern": "*.ggt"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "ggbview.open",
        "title": "GGB:Open File",
        "arguments": [
          "${file}"
        ]
      },
      {
        "command": "ggbview.pickFile",
        "title": "GGB:Pick File"
      },
      {
        "command": "ggbview.openFile",
        "title": "打开GGB包内文件",
        "arguments": [
          "${ggbUri}",
          "${filePath}"
        ]
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.75.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "jszip": "^3.10.1"
  },
  "dependencies": {}
}
